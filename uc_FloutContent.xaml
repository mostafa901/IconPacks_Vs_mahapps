<UserControl x:Class="IconPacks_Vs_mahapps.uc_FloutContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconPacks_Vs_mahapps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="Layout" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600" MinHeight="50">
        <Border CornerRadius="20" BorderThickness="2" BorderBrush="WhiteSmoke" Padding="5">
            <Border.Background>
                <SolidColorBrush Color="DimGray" Opacity=".9"/>
            </Border.Background>
            <TextBlock 
                Text="This is a test for flyout as Toast"    
                                Foreground="white"
                FontSize="14" 
                FontWeight="Bold"
                TextWrapping="Wrap"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Margin="10"
                >

            </TextBlock>
        </Border>
    </Grid>
</UserControl>
