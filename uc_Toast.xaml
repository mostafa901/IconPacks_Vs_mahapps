<UserControl x:Class="OrgSitu.Controls.TypicalControls.uc_Toast"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrgSitu.Controls.TypicalControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="Layout" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600" MinHeight="50">
        <Border CornerRadius="20" BorderThickness="2" BorderBrush="WhiteSmoke" Padding="5">
            <Border.Background>
                <SolidColorBrush Color="DimGray" Opacity=".9"/>
            </Border.Background>
            <TextBlock 
                Text="{Binding Path=Header}" 
                Style="{StaticResource Description}" 
                FontSize="14" 
                TextWrapping="Wrap"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Margin="10"
                >

            </TextBlock>
        </Border>
    </Grid>
</UserControl>
